<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>

            <gradient
                android:angle="90"
                android:endColor="#00ffffff"
                android:startColor="#32ffffff"
                android:type="linear" />

        </shape>
    </item>
    <item
        android:left="1dp"
        android:right="1dp">
        <shape>
            <solid android:color="#0f0f0f" />

        </shape>
    </item>
    <item
        android:left="3dp"
        android:right="3dp">
        <shape>
            <solid android:color="#e6e6e6" />
        </shape>
    </item>
</layer-list>